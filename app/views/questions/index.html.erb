<h3>Listing Questions</h3>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer 1</th>
      <th>Answer 2</th>
      <th>Answer 3</th>
      <th>Correct Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
        <td><%= question.ans1 %></td>
        <td><%= question.ans2 %></td>
        <td><%= question.ans3 %></td>
        <td><%= question.correctAnswer %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back to Topics', subject_path(current_subject.id) %>
<%= button_to 'Add Question', new_question_path, :class => "btn btn-large btn-primary pull-right", :method => :get  %>   
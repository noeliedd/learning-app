<%= bootstrap_form_for(@quiz) do |f| %>
  <% if @quiz.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @quiz.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :name %>
    <%= f.select :level, options_for_select(["Easy","Medium","Hard"], params[:level])%>
    <%= f.hidden_field :topic_id %>

  <div class="actions">
    <%= f.submit :class => "btn btn-large btn-primary pull-right" %>
  </div>

<% end %>
